@page "/"
@inherits ProductsBase

@if (Products == null)
{
    <DisplaySpinner />
}
else
{
    <MudText Typo="Typo.h5">Products</MudText>

    @if (Products.Count() > 0)
    {
        <MudGrid>
            @foreach (var prodGroup in GetGroupedProductsByCategory())
            {
                <MudItem xs="12">
                    <MudText Typo="Typo.h4">@GetCategoryName(prodGroup)</MudText>
                </MudItem>

                <DisplayProducts Products="@prodGroup.Take(4)"></DisplayProducts>

                <hr class="mb-3" />
            }
        </MudGrid>
    }
}