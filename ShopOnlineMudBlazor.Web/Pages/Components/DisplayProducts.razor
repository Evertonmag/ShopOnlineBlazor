@inherits DisplayProductsBase


@foreach (var item in Products)
{
    <MudItem xs="3">
        <MudLink Href="@($"/ProductDetails/{item.Id}")" Style="text-decoration: none;">
            <MudImage Src="@item.ImageUrl" Height="150" Width="250" Style="margin:0px;" Fluid="true"></MudImage>
            <MudCard Style="margin:0px;">
                <MudCardContent Style="margin:0px;">
                    <MudText Typo="Typo.h5" Style="margin:0px;">@item.Name</MudText>
                    <MudText Typo="Typo.body2" Style="margin:0px;">@item.Price.ToString("C")</MudText>
                </MudCardContent>
            </MudCard>
        </MudLink>
    </MudItem>
}
